<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context="com.bupc.checkme.ui.home.HomeFragment">

    <TextView
        android:id="@+id/tvCheckmeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_default"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/checkme_full_description"
        android:textSize="20sp"
        android:textStyle="bold" />

   <ImageView
       android:id="@+id/btnPlayGame"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="15dp"
       android:layout_below="@+id/tvCheckmeTitle"
       android:src="@drawable/ic_play_game"
       android:layout_width="85dp"
       android:layout_height="85dp" />


</RelativeLayout>
